@tailwind base;
@tailwind components;
@tailwind utilities;

body {
  @apply bg-lightPrimary dark:bg-primary;
}

#app {
  @apply dark:text-white;
}

.section {
  @apply w-full;
}

.title {
  @apply my-0 lg:my-3 py-2 border-lightSecondary dark:border-secondary;
}

.info-title {
  @apply uppercase opacity-70 w-full block;
}
